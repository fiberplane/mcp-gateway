{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "react/jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": false,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "references": [
    // Published packages (in dependency order)
    { "path": "./packages/types" },
    { "path": "./packages/core" },
    { "path": "./packages/api" },
    { "path": "./packages/server" },
    { "path": "./packages/cli" }

    // Web UI (built separately by Vite, not part of tsc build)
    // Test server (development only, not published)
  ]
}
