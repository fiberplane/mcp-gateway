{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": { "noExplicitAny": "error" },
      "performance": {
        "noAccumulatingSpread": "error",
        "recommended": true
      }
    }
  },
  "files": { "include": ["**"], "ignore": ["**/dist", "**/node_modules"] }
}
