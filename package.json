{
  "name": "@fiberplane/mcp-gateway-workspace",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@typescript/native-preview": "^7.0.0-dev.20251017.1",
    "madge": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --filter @fiberplane/mcp-gateway-cli dev",
    "build": "bun run --filter @fiberplane/mcp-gateway-cli build",
    "build:types": "bun run --filter @fiberplane/mcp-gateway-cli build:types",
    "build:binaries": "bun run scripts/build-binaries.ts",
    "clean": "rm -rf packages/*/dist",
    "test": "bun test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome ci .",
    "format": "biome check --write .",
    "check-circular": "madge --circular --extensions ts,tsx packages/*/src",
    "deps-graph": "madge --image deps.svg --extensions ts,tsx packages/*/src",
    "changeset": "changeset",
    "release": "changeset publish",
    "ci:version": "changeset version && bun update",
    "ci:publish": "bun run scripts/ci-publish.ts"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "test-mcp-server"
    ],
    "catalog": {
      "mcp-lite": "https://pkg.pr.new/fiberplane/mcp-lite@133"
    }
  }
}
