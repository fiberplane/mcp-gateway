{
  "name": "@fiberplane/mcp-gateway-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "test-mcp-server"
  ],
  "scripts": {
    "dev": "bun run --filter @fiberplane/mcp-gateway dev",
    "dev:ui": "bun run --filter @fiberplane/mcp-gateway-web dev",
    "build": "bun run --filter @fiberplane/mcp-gateway-types build && bun run --filter @fiberplane/mcp-gateway-core build && bun run --filter @fiberplane/mcp-gateway-api build && bun run --filter @fiberplane/mcp-gateway-server build && bun run --filter @fiberplane/mcp-gateway-web build && bun run --filter @fiberplane/mcp-gateway build",
    "build:types": "bun run --filter @fiberplane/mcp-gateway build:types",
    "clean": "rm -rf packages/*/dist && rm -rf packages/*/public",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome ci .",
    "format": "biome check --write .",
    "check-circular": "madge --circular --extensions ts,tsx --ts-config ./tsconfig.madge.json packages/*/src",
    "deps-graph": "madge --image deps.svg --extensions ts,tsx --ts-config ./tsconfig.madge.json packages/*/src",
    "changeset": "changeset",
    "changeset:check": "changeset status",
    "release": "changeset publish",
    "ci:version": "changeset version && bun update"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7",
    "@happy-dom/global-registrator": "^20.0.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "madge": "^8.0.0",
    "typescript": "^5.9.3"
  }
}
