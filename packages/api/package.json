{
  "name": "@fiberplane/mcp-gateway-api",
  "private": true,
  "type": "module",
  "version": "0.2.0-next.0",
  "description": "REST API for querying MCP Gateway logs",
  "homepage": "https://github.com/fiberplane/mcp-gateway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiberplane/mcp-gateway.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun run ../../scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome ci .",
    "format": "biome check --write ."
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "dependencies": {
    "@fiberplane/mcp-gateway-core": "workspace:*",
    "@hono/standard-validator": "^0.1.5",
    "hono": "^4.9.8",
    "zod": "^4.1.11"
  }
}
