{
  "name": "@fiberplane/mcp-gateway",
  "type": "module",
  "version": "0.5.1",
  "description": "HTTP server for proxying and observing MCP traffic",
  "keywords": [
    "mcp",
    "gateway",
    "proxy",
    "llm",
    "claude",
    "model-context-protocol"
  ],
  "license": "MIT",
  "author": "Fiberplane <info@fiberplane.com>",
  "homepage": "https://github.com/fiberplane/mcp-gateway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiberplane/mcp-gateway.git"
  },
  "files": [
    "bin",
    "dist",
    "drizzle",
    "public",
    "README.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "mcp-gateway": "bin/mcp-gateway.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "LOG_LEVEL=debug bun run --watch src/cli.ts",
    "build": "bun run ../../scripts/build.ts && bun run postbuild",
    "postbuild": "mkdir -p public && cp -r ../web/dist/* public/ && cp -r ../core/drizzle .",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome ci .",
    "format": "biome check --write .",
    "validate-deps": "bun run ../../scripts/validate-mcp-gateway-deps.ts",
    "clean-deps": "bun run ../../scripts/clean-dependencies.ts",
    "prepublishOnly": "bun run ../../scripts/merge-dependencies.ts && bun run build",
    "postpublish": "bun run ../../scripts/clean-dependencies.ts"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "hono": "^4.9.8"
  },
  "devDependencies": {
    "@fiberplane/mcp-gateway-types": "workspace:*",
    "@fiberplane/mcp-gateway-core": "workspace:*",
    "@fiberplane/mcp-gateway-api": "workspace:*",
    "@fiberplane/mcp-gateway-management-mcp": "workspace:*",
    "@fiberplane/mcp-gateway-server": "workspace:*",
    "@fiberplane/mcp-gateway-web": "workspace:*",
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.1",
    "mcp-lite": "^0.8.1",
    "typescript": "^5"
  }
}
