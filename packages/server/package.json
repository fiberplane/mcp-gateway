{
  "name": "@fiberplane/mcp-gateway-server",
  "private": true,
  "type": "module",
  "version": "0.2.0-next.0",
  "description": "HTTP server for MCP Gateway",
  "homepage": "https://github.com/fiberplane/mcp-gateway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiberplane/mcp-gateway.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun run ../../scripts/build.ts",
    "typecheck": "tsgo --noEmit"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "dependencies": {
    "@fiberplane/mcp-gateway-core": "workspace:*",
    "@fiberplane/mcp-gateway-types": "workspace:*",
    "@hono/node-server": "^1.19.4",
    "@hono/standard-validator": "^0.1.5",
    "hono": "^4.9.8",
    "mcp-lite": "https://pkg.pr.new/fiberplane/mcp-lite@133",
    "zod": "^4.1.11"
  }
}
