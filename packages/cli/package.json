{
  "name": "@fiberplane/mcp-gateway-cli",
  "private": true,
  "type": "module",
  "version": "0.0.0-dev",
  "homepage": "https://github.com/fiberplane/mcp-gateway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiberplane/mcp-gateway.git"
  },
  "files": [
    "bin",
    "dist",
    "public",
    "README.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "mcp-gateway": "bin/cli.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "LOG_LEVEL=debug bun run --watch src/cli.ts",
    "dev:server": "LOG_LEVEL=debug bun run src/server --watch",
    "build": "bun run ../../scripts/build.ts && bun run postbuild",
    "postbuild": "mkdir -p public && cp -r ../web/dist/* public/",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome ci .",
    "format": "biome check --write .",
    "prepublishOnly": "bun run build"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@fiberplane/mcp-gateway-types": "workspace:*",
    "@fiberplane/mcp-gateway-core": "workspace:*",
    "@fiberplane/mcp-gateway-api": "workspace:*",
    "@fiberplane/mcp-gateway-server": "workspace:*",
    "@fiberplane/mcp-gateway-web": "workspace:*",
    "@hono/node-server": "^1.19.4",
    "@hono/standard-validator": "^0.1.5",
    "@opentui/core": "^0.1.26",
    "@opentui/react": "^0.1.26",
    "hono": "^4.9.8",
    "mcp-lite": "^0.8.1",
    "react": "^19.2.0",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  }
}
